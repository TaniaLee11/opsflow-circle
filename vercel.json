{
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/support/followup-cron",
      "schedule": "*/5 * * * *"
    }
  ],
  "redirects": [
    {
      "source": "/free-course",
      "destination": "/free-courses",
      "permanent": false
    },
    {
      "source": "/business-health-check",
      "destination": "/health-check",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}
